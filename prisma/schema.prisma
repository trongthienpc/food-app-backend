generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model foods {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  restaurantId String?
  price        Float?
  image        String?
  category     String?
  description  String?
  ingredients  String?
}

model restaurants {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  type       String?
  tags       String[]
  location   String?
  distance   String?
  time       Int?
  image      String?
  categories String[]
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  email    String
}
